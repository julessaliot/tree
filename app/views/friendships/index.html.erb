<div class="user-contain">


  <div class="profile-info d-flex" >
    <div class="profile-pic">
      <% if user_signed_in? && current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :fill%>
      <% else %>
        <%= image_tag "avatar-kurt.png", class: "navbar-avatar" %>
      <% end %>
    </div>
    <div class="info-user">
      <h2 class="profile-username">@<%= current_user.username %></h2>
      <h3 class="profile-email"><%= current_user.email %></h3>
      <h4 class="profile-bio1"><%= current_user.bio %></h4>
    </div>
  </div>

  <h2 class="pending-title">Pending Requests</h2>
    <div class="pending-friend-container d-flex">
    <% current_user.pending_friends.each do #|current_user| %>
      <div class="pending-img d-flex">
        <% if user_signed_in? && current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :fill%><%#= cl_image_tag friend.photo.key, height: 80, width: 80, crop: :fill%>
        <% else %>
          <%= image_tag "avatar-kurt.png", class: "navbar-avatar" %>
        <% end %>
      </div>
      <div class="pending-info">
        <h1 class="username-pending"><%= current_user.username %></p>
    <% end %>
    </div>

  <h2 class="friends-title">Friends</h2>
    <div class="friend-info d-flex">
      <% current_user.pending_friends.each do #|current_user| %>
        <div class="friends-pic d-flex">
          <% if user_signed_in? && current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :fill%><%#= cl_image_tag friend.photo.key, height: 80, width: 80, crop: :fill%>
          <% else %>
            <%= image_tag "avatar-kurt.png", class: "navbar-avatar" %>
          <% end %>
        </div>
        <div class="users-info">
          <h1 class="username-friendships"><%= current_user.username %></h1>
          <h1 class="email-friendships"><%= current_user.email %></h1>
        </div>
      <% end %>
    </div>

</div>
