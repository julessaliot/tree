
<div class="signup-page">
  <div class="go-back">
    <%= link_to new_user_session_path do %>
      <i class="fa-solid fa-arrow-left", style="color: white"></i>
    <% end %>
  </div>

  <div class="tree-info-signup">
      <div class="devise-info-text">
        <h1>SHARE YOUR MUSIC, SHARE YOUR EMOTIONS!</h1>
      </div>
      <%= image_tag("logo_light.png", width: 100) %>
    </div>
    <br>

  <div class="signup row justify-content-center">
    <div class="col-11-registration">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>

        <div class="form-inputs-signup">
          <div class="user-email">
            <%= f.input :email,
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { placeholder: "Email", class:"inputs", style: 'height: 50px;' }%>
          </div>
          <%= f.input :username,
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { placeholder: "Username", class:"inputs", style: 'height: 50px;' }%>
          </div>
          <div class="user-password">
            <%= f.input :password,
                        label: false,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { placeholder: "New password", class:"inputs", style: 'height: 50px;' } %>
          </div>
          <div class="user-repassword">
            <%= f.input :password_confirmation,
                        label: false,
                        required: true,
                        input_html: { placeholder: "Confirm password", class:"inputs", style: 'height: 50px;' } %>
          </div>
        <div class="devise-buttons">
          <div class="form-actions1">
            <div class="signup-button1">
              <%= f.button :submit, "Sign up", style:"font-weight: 600; font-size: 20px;" %>
            </div>
          </div>
          <% end %>
        </div>
        </div>
    </div>
  </div>

</div>
