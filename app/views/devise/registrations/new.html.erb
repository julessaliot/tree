
<div class="signup-page">

  <div class="tree-info">
      <div class="devise-info-text">
        <h1>SHARE YOUR MUSIC, SHARE YOUR EMOTIONS!</h1>
      </div>
      <%= image_tag("logo_light.png", width: 100) %>
    </div>
    <br>

  <div class="login row justify-content-center">
    <div class="col-10">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class:"inputs" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class:"inputs" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class:"inputs" } %>
        </div>
        <div class="devise-buttons">
          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>

</div>
