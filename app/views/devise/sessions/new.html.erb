<div class="login-page">

  <div class="tree-info">
    <div class="devise-info-text">
      <h1>SHARE YOUR MUSIC, SHARE YOUR EMOTIONS!</h1>
    </div>
    <%= image_tag("logo dark.png", width: 100) %>
  </div>
  <br>

  <div class="login row justify-content-center">
    <div class="col-10">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class:"inputs", } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class:"inputs" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="devise-buttons">
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

    </div>


  </div>

</div>
