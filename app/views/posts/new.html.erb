<div class="search-page">
  <div class="navbar">
    <%= image_tag "favicon.png", class: "navbar-logo" %>

    <%= image_tag "avatar-kurt.png", class: "navbar-avatar" %>
  </div>
  <div class="instructions">
    <h1>Username</h1>
    <h3>What is the caption for this song?</h3>
  </div>

  <div class="post-components">
    <div class="tracks d-flex">
      <div class="track-art">
        <%= image_tag "#{params[:track_image]}" %>
      </div>
      <div class="track-info">
        <%= image_tag "icon-white.png", class:"logo-white" %>
        <div class="writing">
          <div class="track-name"><strong><%= params[:track_name] %></strong></div>
          <div class="track-artist-album"><%= params[:track_artist] %>, <%= params[:track_album] %></div>
        </div>
      </div>
    </div>
    <br>
    <%= simple_form_for @post do |f| %>
      <%= f.input :content, input_html: {value: "", style: "color: white; background-color: #1B1B1B"}, label: false, placeholder: "Caption" %>
      <%= f.input_field :track_id, as: :hidden, value: params[:track_id] %>
      <%= f.input_field :track_image, as: :hidden, value: params[:track_image] %>
      <br>
      <div class="post-buttons">
      <%= f.submit "   Post   ", class: "post-button" %>
      </div>
    <% end %>
  </div>
</div>
<div class="footer-buttons">
      <%= link_to posts_path do %>
        <div class="home-button">
        </div>
      <% end %>
      <%= link_to search_posts_path do %>
        <div class="post-button1">
        </div>
      <% end %>
      <%= link_to "", href="#" %>
        <div class="chat-button">
        </div>
  </div>
