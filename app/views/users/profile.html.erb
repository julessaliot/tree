<div class="profile-contain d-flex">

  <h1 class="prof">My Profile</h1>

  <div class="profile-info d-flex" >
    <div class="profile-pic">
      <% if user_signed_in? && current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :fill%>
      <% else %>
        <%= image_tag "avatar-kurt.png", class: "navbar-avatar" %>
      <% end %>
    </div>
    <div class="info-user">
      <h2 class="profile-username"><%= @user.username %></h2>
      <h3 class="profile-email"><%=  @user.email %></h3>
      <h4 class=""><%= link_to("Edit Profile", profile_edit_path, class: "edit-profile-btn") %></h4>
    </div>
  </div>

  <div class="profile-header py-2 px-4">
    <h3 class="profile-bio">About me:</h3>
      <p><%= @user.bio %></p>
    <h3 class="profile-interests">Interests:</h3>
      <ul>
        <li class="interest-li"><%= @user.interests %></li>
      </ul>
  </div>
</div>
