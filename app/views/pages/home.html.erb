<div class="connect-page">

  <div class="logo-connect">
    <%= image_tag("logo_light.png", width: 120) %>
  </div>

  <div class="yessir">
    <div class="connect-spotify">
      <h2>Connect to spotify</h2>
      <div class="connect-info">
      <div class="status-connect"><%= user_signed_in? ? "Signed into Tree with:  #{current_user.email}" : "Not signed in" %></div>
    </div>
  </div>

  <div class="button-spotify-connect d-flex">
    <% if user_signed_in? && current_user.provider.nil? %>
      <%= render "spotify_connect" %>
    <% end %>
  </div>

</div>

<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class:""%>
