<div class="connect-page">
  <div class="tree-info">
    <div class="devise-info-text">
      <h1>SHARE YOUR MUSIC, SHARE YOUR EMOTIONS!</h1>
    </div>
    <%= image_tag("logo dark.png", width: 100) %>
  </div>
  <br>

  <div class="connect-popup row justify-content-center">
    <%= user_signed_in? ? "Signed in with: #{current_user.email}" : "Not signed in" %>
    <br>
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}%>
    <br>

    <% if user_signed_in? && current_user.provider.nil? %>
      <p>The features in the Tree app require users to connect to their spotify account</p>
      <%= link_to 'Connect to Spotify', '/auth/spotify', class:"connect", method: :post %>
    <% end %>
  </div>

</div>
